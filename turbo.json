{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": true,
      "persistent": true,
      "inputs": ["!packages/backend/**/*"]
    },
    "clean": {
      "cache": false
    },
    "clean:hard": {
      "cache": false
    },
    "test": {
      "cache": false,
      "persistent": true
    }
  }
}
